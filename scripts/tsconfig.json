{
    "include": [
        "src/**/*.ts",    // Include your source code files
        "node_modules/xml2js/index.d.ts" // Include xml2js type declarations
    ],
    "exclude": [
        "extensions"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es2017",
            "es2018.promise"
        ],
        "jsx": "react"
    }
}
